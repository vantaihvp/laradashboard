{
    "name": "laradashboard/laradashboard",
    "type": "project",
    "description": "Lara Dashboard - A Laravel CMS with Role, Permission, Module, Translation, Content Management",
    "keywords": [
        "framework",
        "laravel",
        "cms",
        "dashboard",
        "role",
        "permission",
        "module",
        "translation",
        "content management"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2|^8.4",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^12.0",
        "laravel/pulse": "^1.4",
        "laravel/tinker": "^2.10",
        "laravel/ui": "^4.5",
        "nwidart/laravel-modules": "^12.0",
        "cweagans/composer-patches": "^1.7",
        "spatie/laravel-permission": "^6.4",
        "spatie/laravel-query-builder": "^6.3",
        "tormjens/eventy": "^0.8.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "laravel/pint": "^1.22",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "larastan/larastan": "^3.0",
        "phpunit/phpunit": "^11.5.3",
        "spatie/laravel-ignition": "^2.9",
        "rector/rector": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true,
            "cweagans/composer-patches": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "merge-plugin": {
            "include": [
                "Modules/*/composer.json"
            ]
        },
        "patches-file": "composer-patches.json"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Modules\\": "Modules/"
        },
        "files": [
            "app/Helper/common.php",
            "app/Helper/database.php",
            "app/Helper/hooks.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "format": [
            "./vendor/bin/pint --config pint.json",
            "./vendor/bin/rector process"
        ],
        "pint": [
            "./vendor/bin/pint --test --config pint.json"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse --memory-limit=5G"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "type-check": [
            "./vendor/bin/rector process"
        ],
        "test": [
            "@pint",
            "@phpstan",
            "@phpunit",
            "@type-check"
        ]
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}
